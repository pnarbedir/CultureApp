<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:background="@drawable/isik4">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pinar Bedir"
        android:layout_marginTop="5dp"
        android:textColor="#FFFFFF"
        android:id="@+id/girisyapan"
        android:textStyle="bold">

    </TextView>

    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/userprofilphoto"
        android:id="@+id/profilfotosu">

    </ImageView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bir ışıkta sen yak gezi ve okumalarınla!"
        android:layout_marginLeft="5dp"
        android:textColor="#FFFFFF"
        android:textStyle="italic">

    </TextView>


</LinearLayout>