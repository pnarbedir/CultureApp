<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".GeziEkleme">
    <TextView
        android:id="@+id/textView7"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="20dp"
        android:text="SehirNo:"
        android:textSize="24sp" />

    <EditText
        android:id="@+id/etSehirNo"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10sp"
        android:ems="10"
        android:inputType="textPersonName" />



    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="20dp"
        android:text="Gitmek İstediğim Şehir:"
        android:textSize="24sp" />

    <EditText
        android:id="@+id/etSehir"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10sp"
        android:ems="10"
        android:inputType="textPersonName" />


    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="20dp"
        android:text="Sebebi:"
        android:textSize="24sp" />

    <EditText
        android:id="@+id/etSebep"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginTop="10sp"
        android:ems="10"
        android:inputType="textPersonName" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnKaydet"
            android:layout_width="60dp"
            android:layout_height="70dp"
            android:layout_marginLeft="35dp"
            android:background="@drawable/menusave"
            android:onClick="save"
            android:textSize="24sp" />

        <Button
            android:id="@+id/btnGeziList"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginLeft="35dp"
            android:background="@drawable/menulist"
            android:onClick="ClickGeziList"
            android:textSize="24sp" />

        <Button
            android:id="@+id/btnGeziSil"
            android:layout_width="60dp"
            android:layout_height="70dp"
            android:layout_marginLeft="35dp"
            android:background="@drawable/menusil"
            android:onClick="ClickGeziSil"
            android:textSize="24sp" />

        <Button
            android:id="@+id/btnGeziGuncelle"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginLeft="35dp"
            android:background="@drawable/menupdate"
            android:onClick="ClickGeziGunc"
            android:textSize="24sp" />

    </LinearLayout>


    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:background="#188A99"
        app:itemIconTint="#FFFFFF"
        app:labelVisibilityMode="unlabeled"
        app:menu="@menu/bottom_navigation" />


</LinearLayout>