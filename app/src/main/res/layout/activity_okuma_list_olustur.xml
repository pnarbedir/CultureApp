<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10dp"
    android:layout_marginTop="35dp"
    android:layout_marginRight="10dp"
    android:orientation="vertical"
    tools:context=".OkumaListOlustur">
    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kitap No:"
        android:textSize="21sp" />

    <EditText
        android:id="@+id/etKitapNo"
        android:layout_width="383dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:ems="10"
        android:gravity="start|top"
        android:inputType="textMultiLine" />
    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kitap Adi:"
        android:textSize="21sp" />

    <EditText
        android:id="@+id/etKitapAd"
        android:layout_width="383dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:ems="10"
        android:gravity="start|top"
        android:inputType="textMultiLine" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kitap Yazari:"
        android:textSize="21sp" />

    <EditText
        android:id="@+id/etYazarAd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:ems="10"
        android:gravity="start|top"
        android:inputType="textMultiLine" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kitap Hakkında Notlarım:"
        android:textSize="21sp" />

    <EditText
        android:id="@+id/etKitapNot"
        android:layout_width="match_parent"
        android:layout_height="175dp"
        android:layout_marginTop="5dp"
        android:ems="10"
        android:gravity="start|top"
        android:inputType="textMultiLine" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        >

        <Button
            android:id="@+id/btnKitapKaydet"
            android:layout_width="60dp"
            android:layout_height="70dp"
            android:layout_marginLeft="15dp"
            android:background="@drawable/menusave"
            android:onClick="ClickKitapKaydet"
            android:textSize="24sp" />

        <Button
            android:id="@+id/btnKitapListele"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginLeft="35dp"
            android:background="@drawable/menulist"
            android:onClick="ClickKitapListele"
            android:textSize="24sp" />

        <Button
            android:id="@+id/btnKitapSil"
            android:layout_width="60dp"
            android:layout_height="70dp"
            android:layout_marginLeft="35dp"
            android:background="@drawable/menusil"
            android:onClick="ClickKitapSil"
            android:textSize="24sp" />

        <Button
            android:id="@+id/btnKitapGuncelle"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginLeft="35dp"
            android:background="@drawable/menupdate"
            android:onClick="ClickKitapGuncelle"
            android:textSize="24sp" />
    </LinearLayout>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:background="#188A99"
        app:itemIconTint="#FFFFFF"
        app:labelVisibilityMode="unlabeled"
        app:menu="@menu/bottom_navigation" />
</LinearLayout>